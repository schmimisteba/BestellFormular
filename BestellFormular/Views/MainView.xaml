                                <Entry Text="{Binding AdressHead.ProcessorPlace.Value}" />
                                <Label Text="{Binding AdressHead.ProcessorPropertyHolder.Titel, Converter={converters:RequiredFieldConverter}}" />
                                <Entry Text="{Binding AdressHead.ProcessorPropertyHolder.Value}" />
                                <Label Text="{Binding AdressHead.ProcessorPhone.Titel}" />
                                <Entry Text="{Binding AdressHead.ProcessorPhone.Value}" />
                                <Label Text="{Binding AdressHead.ProcessorEmail.Titel}" />
                                <Entry Text="{Binding AdressHead.ProcessorEmail.Value}" />
                            </VerticalStackLayout>

                            <!--  Liste der Vorschläge  -->
                            <ListView
                                Margin="10,-94,10,0"
                                Background="{AppThemeBinding Light={DynamicResource PrimaryBackground},
                                                             Dark={DynamicResource Black}}"
                                HeightRequest="150"
                                IsVisible="{Binding AdressHead.ProcessorName.Selected}"
                                ItemsSource="{Binding AdressHead.Addresses}"
                                SelectedItem="{Binding AdressHead.SelectedAddress}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <Label
                                                Margin="5,0"
                                                Padding="5"
                                                Text="{Binding OverviewString}" />
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>

                    <Border Grid.Column="2">
                        <Grid>
                            <VerticalStackLayout>
                                <Grid ColumnDefinitions="2*,130">
                                    <Label Style="{StaticResource TitelLabelStyle}" VerticalOptions="Center">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span FontAttributes="Bold" Text="{Binding AdressHead.DeliveryName.GroupName}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End">
                                        <Label
                                            Grid.Column="1"
                                            Text="{Binding AdressHead.DeliveryLikeBuyer.Titel}"
                                            VerticalOptions="Center" />
                                        <CheckBox
                                            Grid.Column="1"
                                            Margin="0,5,0,0"
                                            IsChecked="{Binding AdressHead.DeliveryLikeBuyer.Value}" />
                                    </HorizontalStackLayout>
                                </Grid>

                                <Label Text="{Binding AdressHead.DeliveryName.Titel, Converter={converters:RequiredFieldConverter}}" />
                                <Entry Text="{Binding AdressHead.DeliveryName.Value}" Unfocused="OnEntryUnfocused" />
                                <Label Text="{Binding AdressHead.DeliveryStreet.Titel, Converter={converters:RequiredFieldConverter}}" />
                                <Entry Text="{Binding AdressHead.DeliveryStreet.Value}" />
                                <Label Text="{Binding AdressHead.DeliveryPlace.Titel, Converter={converters:RequiredFieldConverter}}" />
                                <Entry Text="{Binding AdressHead.DeliveryPlace.Value}" />
                            </VerticalStackLayout>

                            <!--  Liste der Vorschläge  -->
                            <ListView
                                Margin="10,-94,10,0"
                                Background="{AppThemeBinding Light={DynamicResource PrimaryBackground},
                                                             Dark={DynamicResource Black}}"
                                HeightRequest="150"
                                IsVisible="{Binding AdressHead.DeliveryName.Selected}"
                                ItemsSource="{Binding AdressHead.Addresses}"
                                SelectedItem="{Binding AdressHead.SelectedAddress}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <Label
                                                Margin="5,0"
                                                Padding="5"
                                                Text="{Binding OverviewString}" />
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" Margin="5,5,0,0">
                        <VerticalStackLayout>
                            <HorizontalStackLayout HeightRequest="45">
                                <Label Style="{StaticResource TitelLabelStyle}" VerticalOptions="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span FontAttributes="Bold" Text="{Binding AdressHead.Commission.GroupName}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </HorizontalStackLayout>
                            <Label Text="{Binding AdressHead.Commission.Titel, Converter={converters:RequiredFieldConverter}}" />
                            <Entry Text="{Binding AdressHead.Commission.Value}" />
                            <Label Text="{Binding AdressHead.OrderNumber.Titel}" />
                            <Entry Text="{Binding AdressHead.OrderNumber.Value}" />
                            <Label Text="{Binding AdressHead.OfferNumber.Titel}" />
                            <Entry Text="{Binding AdressHead.OfferNumber.Value}" />
                            <Label Text="{Binding AdressHead.Date.Titel, Converter={converters:RequiredFieldConverter}}" />
                            <DatePicker Margin="10,0,5,5" Date="{Binding AdressHead.Date.Value}" />
                            <Label Text="{Binding AdressHead.Visum.Titel, Converter={converters:RequiredFieldConverter}}" />
                            <Entry Text="{Binding AdressHead.Visum.Value}" />
                            <Label Text="{Binding AdressHead.ObjectType.Titel, Converter={converters:RequiredFieldConverter}}" />
                            <Picker ItemsSource="{Binding AdressHead.ObjectType.FieldInputSelection}" SelectedItem="{Binding AdressHead.ObjectType.Value}" />
                        </VerticalStackLayout>
                    </Border>

                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5,5,0,0">
                        <VerticalStackLayout>
                            <HorizontalStackLayout HeightRequest="45">
                                <Label Style="{StaticResource TitelLabelStyle}" VerticalOptions="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span FontAttributes="Bold" Text="{Binding AdressHead.WishDate.GroupName}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </HorizontalStackLayout>
                            <Label Text="{Binding AdressHead.WishDate.Titel, Converter={converters:RequiredFieldConverter}}" />
                            <DatePicker
                                Margin="10,0,5,5"
                                Date="{Binding AdressHead.WishDate.Value}"
                                HorizontalOptions="Start" />
                            <Label Text="{Binding AdressHead.NameAvis.Titel}" />
                            <Entry Text="{Binding AdressHead.NameAvis.Value}" />
                            <Label Text="{Binding AdressHead.PhoneAvis.Titel}" />
                            <Entry Text="{Binding AdressHead.PhoneAvis.Value}" />
                            <Label Text="{Binding AdressHead.OnCall.Titel}" />
                            <Picker ItemsSource="{Binding AdressHead.OnCall.FieldInputSelection}" SelectedItem="{Binding AdressHead.OnCall.Value}" />
                            <Label Text="{Binding AdressHead.WillBeCollected.Titel}" />
                            <Picker ItemsSource="{Binding AdressHead.WillBeCollected.FieldInputSelection}" SelectedItem="{Binding AdressHead.WillBeCollected.Value}" />
                            <Label Text="{Binding AdressHead.WithoutTrailer.Titel}" />
                            <Picker ItemsSource="{Binding AdressHead.WithoutTrailer.FieldInputSelection}" SelectedItem="{Binding AdressHead.WithoutTrailer.Value}" />
                        </VerticalStackLayout>
                    </Border>

                    <Border
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="5,5,0,0">

                        <VerticalStackLayout>
                            <Grid ColumnDefinitions="2*,130">
                                <Label Style="{StaticResource TitelLabelStyle}" VerticalOptions="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span FontAttributes="Bold" Text="{Binding AdressHead.InvoiceLikeBuyer.GroupName}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End">
                                    <Label
                                        Grid.Column="1"
                                        Text="{Binding AdressHead.InvoiceLikeBuyer.Titel}"
                                        VerticalOptions="Center" />
                                    <CheckBox
                                        Grid.Column="1"
                                        Margin="0,5,0,0"
                                        IsChecked="{Binding AdressHead.InvoiceLikeBuyer.Value}" />
                                </HorizontalStackLayout>
                            </Grid>

                            <Label Text="{Binding AdressHead.InvoiceName.Titel, Converter={converters:RequiredFieldConverter}}" />
                            <Entry Text="{Binding AdressHead.InvoiceName.Value}" />
                            <Label Text="{Binding AdressHead.InvoiceStreet.Titel, Converter={converters:RequiredFieldConverter}}" />
                            <Entry Text="{Binding AdressHead.InvoiceStreet.Value}" />
                            <Label Text="{Binding AdressHead.InvoicePlace.Titel, Converter={converters:RequiredFieldConverter}}" />
                            <Entry Text="{Binding AdressHead.InvoicePlace.Value}" />
                            <Label Text="{Binding AdressHead.InvoiceCoordinates.Titel}" />
                            <Entry Text="{Binding AdressHead.InvoiceCoordinates.Value}" />
                        </VerticalStackLayout>
                    </Border>


                    <Border
                        Grid.Row="2"
                        Grid.ColumnSpan="3"
                        Margin="5,5,0,5"
                        Padding="0">
                        <VerticalStackLayout>
                            <HorizontalStackLayout HeightRequest="45">
                                <Label Style="{StaticResource TitelLabelStyle}" VerticalOptions="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span FontAttributes="Bold" Text="{Binding AdressHead.Remark.Titel}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </HorizontalStackLayout>
                            <Editor
                                Margin="5"
                                HeightRequest="150"
                                Text="{Binding AdressHead.Remark.Value}" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </StackLayout>
        </ScrollView>

        <!--  DropDown  -->
        <Border
            Grid.Row="2"
            Margin="0"
            Background="Transparent"
            IsVisible="{Binding FilesMenuVisible}"
            StrokeThickness="0">
            <Grid ColumnDefinitions="150,*">
                <VerticalStackLayout Grid.Column="0">
                    <Button
                        Margin="5"
                        Command="{Binding NewOrderCommand}"
                        Text="{Binding ButtonsController.NewButton.Titel}" />

                    <Button
                        Margin="5,0,5,5"
                        Command="{Binding LoadCommand}"
                        Text="{Binding ButtonsController.LoadButton.Titel}" />

                    <Button
                        Margin="5,0,5,5"
                        Command="{Binding SaveCommand}"
                        Text="{Binding ButtonsController.SaveButton.Titel}" />

                    <Button
                        Margin="5,0,5,5"
                        Command="{Binding SaveAsCommand}"
                        Text="{Binding ButtonsController.SaveAsButton.Titel}" />

                    <Button
                        Margin="5,0,5,5"
                        Command="{Binding SendCommand}"
                        Text="{Binding ButtonsController.SendButton.Titel}" />

                    <Button
                        Margin="5,0,5,5"
                        Command="{Binding SetExpertModusCommand}"
                        Text="{Binding ButtonsController.ExpertModus.Titel}">
                        <Button.Triggers>
                            <DataTrigger
                                Binding="{Binding ButtonsController.ExpertModus.Selected}"
                                TargetType="Button"
                                Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryPressed}" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>

                    <Button
                        Margin="5,0,5,5"
                        IsEnabled="False"
                        Text="{Binding Language}" />

                    <Button
                        Margin="5,0,5,5"
                        Command="{Binding OpenFileCommand}"
                        Text="{Binding ButtonsController.OpenFileButton.Titel}" />
                </VerticalStackLayout>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ShowFilesMenuCommand}" />
                </Grid.GestureRecognizers>
            </Grid>
        </Border>

    </Grid>
</ContentPage>
