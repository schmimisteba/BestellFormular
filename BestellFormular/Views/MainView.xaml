<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BestellFormular.Views.MainView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:BestellFormular.Converter"
    xmlns:error="clr-namespace:BestellFormular.Models.Manager"
    xmlns:gui="clr-namespace:BestellFormular.GUI"
    xmlns:model="clr-namespace:BestellFormular.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:BestellFormular.ViewModels"
    Background="{AppThemeBinding Light={DynamicResource PrimaryBackground},
                                 Dark={DynamicResource Gray900}}"
    MinimumWidthRequest="500">

    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:MainViewModel x:Key="vm" />
        </ResourceDictionary>
        <ResourceDictionary>
            <converters:FormattedTextConverter x:Key="FormattedTextConverter" />
            <converters:NullToBooleanConverter x:Key="NullToBooleanConverter" />
            <converters:IsEmptyToFalseConverter x:Key="IsEmptyToFalseConverter" />
            <converters:RequiredFieldConverter x:Key="RequiredFieldConverter" />
            <converters:IsEmptyObservableCollectionToFalseConverter x:Key="IsEmptyObservableCollectionToFalseConverter" />
            <converters:FirstCharConverter x:Key="FirstCharConverter" />
            <converters:RestOfStringConverter x:Key="RestOfStringConverter" />
            <converters:BeforeSlashNConverter x:Key="BeforeSlashNConverter" />
            <converters:AfterSlashNConverter x:Key="AfterSlashNConverter" />
            <converters:DisplayWithoutBracketsConverter x:Key="BracketsConverter" />
        </ResourceDictionary>
        <ResourceDictionary>

            <Style x:Key="CustomNumberEntryStyle" TargetType="Entry">
                <Style.Behaviors>
                    <gui:NumericValidationBehavior />
                </Style.Behaviors>
            </Style>
            <!--  TitelLabelStyle Style  -->
            <Style x:Key="TitelLabelStyle" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="10,5,10,0" />
            </Style>
            <!--  IconButtonStyle style  -->
            <Style x:Key="IconButtonStyle" TargetType="Button">
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="MinimumHeightRequest" Value="15" />
                <Setter Property="MinimumWidthRequest" Value="15" />
                <Setter Property="TextColor" Value="{StaticResource Primary}" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{StaticResource PrimaryHover}" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            <Style x:Key="CustomVerticalStackLayoutStyle" TargetType="VerticalStackLayout">
                <Setter Property="Margin" Value="0,0,0,5" />
            </Style>
            <Style x:Key="CustomGridStyle" TargetType="Grid">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={DynamicResource White}, Dark={DynamicResource PrimaryDarkBackground}}" />
            </Style>
            <Style x:Key="CustomListViewStyle" TargetType="ListView">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={DynamicResource White}, Dark={DynamicResource PrimaryDarkBackground}}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Buttons View  -->
        <Grid ColumnDefinitions="150,150,150,*,5*">

            <Button
                Grid.Column="0"
                Margin="5,5,5,0"
                Command="{Binding ShowFilesMenuCommand}"
                Text="{Binding ButtonsController.FileMenuButton.Titel, StringFormat='{0}   ▼'}">
                <Button.Triggers>
                    <DataTrigger
                        Binding="{Binding FilesMenuVisible}"
                        TargetType="Button"
                        Value="True">
                        <Setter Property="Text" Value="{Binding ButtonsController.FileMenuButton.Titel, StringFormat='{0}   ▲'}" />
                        <Setter Property="Background" Value="{StaticResource PrimaryPressed}" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <Button
                Grid.Column="1"
                Command="{Binding ShowProductCommand}"
                Text="{Binding ButtonsController.ProductButton.Titel}" />

            <Button
                Grid.Column="2"
                Command="{Binding ShowAdressCommand}"
                Text="{Binding ButtonsController.AdressButton.Titel}" />

            <Label
                Grid.Column="4"
                Margin="0,5,10,-10"
                FontFamily="Univers 45 Light Bold"
                FontSize="40"
                HorizontalOptions="End"
                Text="Dosteba"
                TextColor="{StaticResource Primary}"
                VerticalOptions="End" />

        </Grid>

        <!--  Error Message Field  -->
        <Grid Grid.Row="1" IsVisible="{Binding Source={x:Static error:ErrorManager.CurrentError}, Path=HasError}">
            <Border
                Margin="5,5,5,0"
                Background="{Binding Source={x:Static error:ErrorManager.CurrentError}, Path=ErrorColor}"
                StrokeThickness="0">
                <Grid ColumnDefinitions="*,50">
                    <Label Grid.Column="0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontAttributes="Bold" Text="{Binding Source={x:Static error:ErrorManager.CurrentError}, Path=Title}" />
                                <Span Text=": " />
                                <Span Text="{Binding Source={x:Static error:ErrorManager.CurrentError}, Path=Message}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Button
                        Grid.Column="1"
                        Command="{Binding CloseErrorCommand}"
                        CornerRadius="5"
                        FontSize="14"
                        MinimumHeightRequest="20"
                        Text="X" />
                </Grid>
            </Border>
        </Grid>

        <!--  Produkte View  -->
        <Grid
            Grid.Row="2"
            ColumnDefinitions="310,*"
            IsVisible="{Binding ProductVisible}"
            RowDefinitions="*">

            <!--  Product List and Checkboxes  -->
            <Grid RowDefinitions="*, Auto, 210">

                <!--  ListView  -->
                <Border Grid.Row="0" Margin="5,5,0,0">
                    <StackLayout>
                        <Grid
                            Background="{AppThemeBinding Light={DynamicResource White},
                                                         Dark={DynamicResource PrimaryDarkBackground}}"
                            ColumnDefinitions="3*,*"
                            Style="{StaticResource CustomGridStyle}">
                            <Label Text="{Binding SelectedElement.AluminumWindowSill.Count.GroupName}" />
                            <Label
                                Grid.Column="1"
                                Margin="0,5,10,0"
                                HorizontalOptions="End"
                                Text="{Binding SelectedElement.AluminumWindowSill.Count.Titel}" />
                        </Grid>

                        <ListView
                            x:Name="ProductsListView"
                            IsVisible="True"
                            ItemsSource="{Binding Elements}"
                            SelectedItem="{Binding SelectedElement, Mode=TwoWay}"
                            Style="{StaticResource CustomListViewStyle}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout>
                                            <Grid ColumnDefinitions="3*,2*, *">
                                                <Label
                                                    Margin="5,0,5,0"
                                                    Padding="5"
                                                    FontSize="14">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding ButtonsController.Products.GroupName, Source={StaticResource vm}}" TextColor="{AppThemeBinding Light={DynamicResource PlaceHolderPrimary}, Dark={DynamicResource PlaceHolderPrimaryDark}}" />
                                                            <Span Text=" " />
                                                            <Span Text="{Binding Name}" TextColor="{AppThemeBinding Light={DynamicResource PlaceHolderPrimary}, Dark={DynamicResource PlaceHolderPrimaryDark}}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <Label
                                                    Grid.Column="2"
                                                    Margin="5,0,10,0"
                                                    Padding="5"
                                                    FontSize="14"
                                                    HorizontalTextAlignment="End"
                                                    Text="{Binding Count}"
                                                    TextColor="{AppThemeBinding Light={DynamicResource PlaceHolderPrimary},
                                                                                Dark={DynamicResource PlaceHolderPrimaryDark}}" />
                                            </Grid>
                                            <Grid Margin="0,0,10,0" ColumnDefinitions="3*,60">
                                                <HorizontalStackLayout>
                                                    <Label
                                                        Margin="10,0,0,6"
                                                        FontSize="12"
                                                        IsEnabled="False"
                                                        Text="{Binding ProductPositionString, Converter={StaticResource BeforeSlashNConverter}}"
                                                        TextColor="{AppThemeBinding Light={DynamicResource PlaceHolderPrimary},
                                                                                    Dark={DynamicResource PlaceHolderPrimaryDark}}" />
                                                </HorizontalStackLayout>

                                                <HorizontalStackLayout Grid.Column="1">
                                                    <Label
                                                        Margin="10,0,0,5"
                                                        FontSize="12"
                                                        IsEnabled="False"
                                                        Text="{Binding ProductPositionString, Converter={StaticResource AfterSlashNConverter}}"
                                                        TextColor="{AppThemeBinding Light={DynamicResource PlaceHolderPrimary},
                                                                                    Dark={DynamicResource PlaceHolderPrimaryDark}}" />
                                                </HorizontalStackLayout>
                                            </Grid>

                                            <!--<Label
                                                Margin="10,0,5,10"
                                                FontSize="12"
                                                IsEnabled="False"
                                                Text="{Binding ProductPositionString}"
                                                TextColor="{AppThemeBinding Light={DynamicResource PlaceHolderPrimary},
                                                                            Dark={DynamicResource PlaceHolderPrimaryDark}}" />-->
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>
                </Border>

                <!--  Button to add selected product to the list  -->
                <Grid Grid.Row="1" ColumnDefinitions="1*,1*,*">
                    <Button
                        Grid.Column="0"
                        Margin="5,5,0,0"
                        Command="{Binding AddElementCommand}"
                        HeightRequest="40"
                        Text="{Binding ButtonsController.AddButton.Titel}" />

                    <Button
                        Grid.Column="1"
                        Margin="5,5,0,0"
                        Command="{Binding CopyElementCommand}"
                        IsEnabled="{Binding SelectedElement, Converter={StaticResource NullToBooleanConverter}}"
                        Text="{Binding ButtonsController.CopyButton.Titel}" />

                    <Button
                        Grid.Column="2"
                        Margin="5,5,0,0"
                        Command="{Binding RemoveElementCommand}"
                        IsEnabled="{Binding SelectedElement, Converter={StaticResource NullToBooleanConverter}}"
                        Text="{Binding ButtonsController.DeleteButton.Titel}" />
                </Grid>

                <!--  Checkboxen für Produkte zum Fenster  -->
                <Border Grid.Row="2" Margin="5,5,0,5">

                    <Grid>
                        <ScrollView>
                            <VerticalStackLayout Margin="10,0,0,0" Background="{AppThemeBinding Light={DynamicResource PrimaryBackground}, Dark={DynamicResource PlaceHolderPrimary}}">
                                <Grid
                                    Margin="0,0,0,1"
                                    Background="{AppThemeBinding Light={DynamicResource White},
                                                                 Dark={DynamicResource PrimaryDarkBackground}}"
                                    ColumnDefinitions="40,*">
                                    <Label
                                        Grid.Column="1"
                                        Text="{Binding SelectedElement.AluminumWindowSill.Product.Titel}"
                                        VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding ToggleCheckboxCommand}" CommandParameter="{Binding SelectedElement.AluminumWindowSill}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <CheckBox Margin="0,5,0,0" IsChecked="{Binding SelectedElement.AluminumWindowSill.Selected, Mode=TwoWay}" />
                                </Grid>
                                <Grid
                                    Margin="0,0,0,1"
                                    Background="{AppThemeBinding Light={DynamicResource White},
                                                                 Dark={DynamicResource PrimaryDarkBackground}}"
                                    ColumnDefinitions="40,*">
                                    <Label
                                        Grid.Column="1"
                                        Text="{Binding SelectedElement.SupportAngleWithSlope.Product.Titel}"
                                        VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding ToggleCheckboxCommand}" CommandParameter="{Binding SelectedElement.SupportAngleWithSlope}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <CheckBox Margin="0,5,0,0" IsChecked="{Binding SelectedElement.SupportAngleWithSlope.Selected, Mode=TwoWay}" />
                                </Grid>
                                <Grid
                                    Margin="0,0,0,1"
                                    Background="{AppThemeBinding Light={DynamicResource White},
                                                                 Dark={DynamicResource PrimaryDarkBackground}}"
                                    ColumnDefinitions="40,*">
                                    <Label
                                        Grid.Column="1"
                                        Text="{Binding SelectedElement.SupportWedgesWithSlope.Product.Titel}"
                                        VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding ToggleCheckboxCommand}" CommandParameter="{Binding SelectedElement.SupportWedgesWithSlope}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <CheckBox Margin="0,5,0,0" IsChecked="{Binding SelectedElement.SupportWedgesWithSlope.Selected, Mode=TwoWay}" />
                                </Grid>
                                <Grid
                                    Margin="0,0,0,1"
                                    Background="{AppThemeBinding Light={DynamicResource White},
                                                                 Dark={DynamicResource PrimaryDarkBackground}}"
                                    ColumnDefinitions="40,*">
                                    <Label
                                        Grid.Column="1"
                                        Text="{Binding SelectedElement.ApronElement.Product.Titel}"
                                        VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding ToggleCheckboxCommand}" CommandParameter="{Binding SelectedElement.ApronElement}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <CheckBox Margin="0,5,0,0" IsChecked="{Binding SelectedElement.ApronElement.Selected, Mode=TwoWay}" />
                                </Grid>
                                <Grid
                                    Margin="0,0,0,1"
                                    Background="{AppThemeBinding Light={DynamicResource White},
                                                                 Dark={DynamicResource PrimaryDarkBackground}}"
                                    ColumnDefinitions="40,*">
                                    <Label
                                        Grid.Column="1"
                                        Text="{Binding SelectedElement.Ravisol.Product.Titel}"
                                        VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding ToggleCheckboxCommand}" CommandParameter="{Binding SelectedElement.Ravisol}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <CheckBox Margin="0,5,0,0" IsChecked="{Binding SelectedElement.Ravisol.Selected, Mode=TwoWay}" />
                                </Grid>
                                <Grid Background="{AppThemeBinding Light={DynamicResource White}, Dark={DynamicResource PrimaryDarkBackground}}" ColumnDefinitions="40,*">
                                    <Label
                                        Grid.Column="1"
                                        Text="{Binding SelectedElement.Stuisol.Product.Titel}"
                                        VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding ToggleCheckboxCommand}" CommandParameter="{Binding SelectedElement.Stuisol}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <CheckBox Margin="0,5,0,0" IsChecked="{Binding SelectedElement.Stuisol.Selected, Mode=TwoWay}" />
                                </Grid>
                            </VerticalStackLayout>
                        </ScrollView>
                    </Grid>
                </Border>

            </Grid>

            <!--  Products Properties  -->
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,0,5,5">

                <Grid RowDefinitions="Auto, Auto, Auto, *">

                    <!--  Window name and buttons  -->
                    <Border Grid.ColumnSpan="10" Margin="5,5,0,5">

                        <Grid ColumnDefinitions="*,100,60,60">
                            <VerticalStackLayout>
                                <Label Text="{Binding ButtonsController.Products.GroupName}" />
                                <Entry Margin="10,0,0,0" Text="{Binding SelectedElement.Name}" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Margin="0">
                                <Label Text="{Binding SelectedElement.AluminumWindowSill.Count.Titel}" />
                                <Entry
                                    Margin="5,0,0,5"
                                    IsEnabled="False"
                                    Text="{Binding SelectedElement.Count}"
                                    TextColor="{AppThemeBinding Light={DynamicResource PlaceHolderPrimary},
                                                                Dark={DynamicResource PlaceHolderPrimaryDark}}" />
                            </VerticalStackLayout>
                            <Button
                                Grid.Column="2"
                                Margin="5,0,5,5"
                                Command="{Binding CopyWindowCommand}"
                                Text="+"
                                VerticalOptions="End" />
                            <Button
                                Grid.Column="3"
                                Margin="0,0,10,5"
                                Command="{Binding RemoveWindowCommand}"
                                Text="-"
                                VerticalOptions="End" />
                        </Grid>
                    </Border>

                    <!--  All products  -->
                    <ScrollView
                        x:Name="ProductScrollView"
                        Grid.Row="2"
                        Grid.RowSpan="2"
                        Margin="0">

                        <!--  Window view with multiple products  -->
                        <Grid gui:GridHelper.ColumnDefinitions="{Binding SelectedElement.ColumnDefinitions}">

                            <!--  Grundmasse  -->
                            <Grid
                                Grid.Column="{Binding SelectedElement.GeneralMass.Column}"
                                Margin="0,-1,0,0"
                                IsVisible="{Binding SelectedElement.GeneralMass.Selected}">

                                <Border StrokeShape="RoundRectangle 0,0,5,5">
                                    <VerticalStackLayout Style="{StaticResource CustomVerticalStackLayoutStyle}">

                                        <!--  Baumasse  -->
                                        <VerticalStackLayout>
                                            <VerticalStackLayout IsVisible="{Binding SelectedElement.GeneralMass.WindowLightWidth.Selected}">
                                                <Label>
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding SelectedElement.GeneralMass.WindowLightWidth.Titel}" />
                                                            <Span Text=" " />
                                                            <Span FontSize="14" Text="{Binding SelectedElement.GeneralMass.WindowLightWidth.OldShortCut, Converter={StaticResource FirstCharConverter}}" />
                                                            <Span FontSize="10" Text="{Binding SelectedElement.GeneralMass.WindowLightWidth.OldShortCut, Converter={StaticResource RestOfStringConverter}}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding UpdateImageCommand}" CommandParameter="{Binding SelectedElement.GeneralMass.WindowLightWidth}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                <Entry Style="{StaticResource CustomNumberEntryStyle}" Text="{Binding SelectedElement.GeneralMass.WindowLightWidth.Value}" />
                                            </VerticalStackLayout>

                                            <VerticalStackLayout IsVisible="{Binding SelectedElement.GeneralMass.FrameWidthTop.Selected}">
                                                <Label>
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding SelectedElement.GeneralMass.FrameWidthTop.Titel}" />
                                                            <Span Text=" " />
                                                            <Span FontSize="14" Text="{Binding SelectedElement.GeneralMass.FrameWidthTop.OldShortCut, Converter={StaticResource FirstCharConverter}}" />
                                                            <Span FontSize="10" Text="{Binding SelectedElement.GeneralMass.FrameWidthTop.OldShortCut, Converter={StaticResource RestOfStringConverter}}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding UpdateImageCommand}" CommandParameter="{Binding SelectedElement.GeneralMass.FrameWidthTop}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                <Entry Style="{StaticResource CustomNumberEntryStyle}" Text="{Binding SelectedElement.GeneralMass.FrameWidthTop.Value}" />
                                            </VerticalStackLayout>

                                            <VerticalStackLayout IsVisible="{Binding SelectedElement.GeneralMass.FrameWidthBottom.Selected}">
                                                <Label>
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding SelectedElement.GeneralMass.FrameWidthBottom.Titel}" />
                                                            <Span Text=" " />
                                                            <Span FontSize="14" Text="{Binding SelectedElement.GeneralMass.FrameWidthBottom.OldShortCut, Converter={StaticResource FirstCharConverter}}" />
                                                            <Span FontSize="10" Text="{Binding SelectedElement.GeneralMass.FrameWidthBottom.OldShortCut, Converter={StaticResource RestOfStringConverter}}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding UpdateImageCommand}" CommandParameter="{Binding SelectedElement.GeneralMass.FrameWidthBottom}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                <Entry Style="{StaticResource CustomNumberEntryStyle}" Text="{Binding SelectedElement.GeneralMass.FrameWidthBottom.Value}" />
                                            </VerticalStackLayout>

                                            <VerticalStackLayout IsVisible="{Binding SelectedElement.GeneralMass.DeepWallRevealBottom.Selected}">
                                                <Label>
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding SelectedElement.GeneralMass.DeepWallRevealBottom.Titel}" />
                                                            <Span Text=" " />
                                                            <Span FontSize="14" Text="{Binding SelectedElement.GeneralMass.DeepWallRevealBottom.OldShortCut, Converter={StaticResource FirstCharConverter}}" />
                                                            <Span FontSize="10" Text="{Binding SelectedElement.GeneralMass.DeepWallRevealBottom.OldShortCut, Converter={StaticResource RestOfStringConverter}}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding UpdateImageCommand}" CommandParameter="{Binding SelectedElement.GeneralMass.DeepWallRevealBottom}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                <Entry Style="{StaticResource CustomNumberEntryStyle}" Text="{Binding SelectedElement.GeneralMass.DeepWallRevealBottom.Value}" />
                                            </VerticalStackLayout>

                                            <VerticalStackLayout IsVisible="{Binding SelectedElement.GeneralMass.ThickFacade.Selected}">
                                                <Label>
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding SelectedElement.GeneralMass.ThickFacade.Titel}" />
                                                            <Span Text=" " />
                                                            <Span FontSize="14" Text="{Binding SelectedElement.GeneralMass.ThickFacade.OldShortCut, Converter={StaticResource FirstCharConverter}}" />
                                                            <Span FontSize="10" Text="{Binding SelectedElement.GeneralMass.ThickFacade.OldShortCut, Converter={StaticResource RestOfStringConverter}}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding UpdateImageCommand}" CommandParameter="{Binding SelectedElement.GeneralMass.ThickFacade}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                <Picker ItemsSource="{Binding SelectedElement.GeneralMass.ThickFacade.FieldInputSelection}" SelectedItem="{Binding SelectedElement.GeneralMass.ThickFacade.Value}" />
                                            </VerticalStackLayout>
                                        </VerticalStackLayout>

                                        <!--  Algemeinmasse  -->
                                        <VerticalStackLayout>
                                            <Grid
                                                Margin="0,10,0,5"
                                                Padding="0,0,0,5"
                                                BackgroundColor="{StaticResource PrimaryBackground}">
                                                <Grid BackgroundColor="{AppThemeBinding Light={DynamicResource White}, Dark={DynamicResource PrimaryDarkBackground}}" />
                                            </Grid>

                                            <Grid ColumnDefinitions="*,30">
                                                <Label Style="{StaticResource TitelLabelStyle}" Text="{Binding SelectedElement.GeneralMass.VisibleFrameWidthLeft.GroupName}">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding ShowSurchargeCommand}" CommandParameter="{Binding SelectedElement.GeneralMass.VisibleFrameWidthLeft}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                <Button
                                                    Grid.Column="1"
                                                    Margin="0,0,5,0"
                                                    Clicked="GeneralMass_Clicked"
                                                    Command="{Binding ShowSurchargeCommand}"
                                                    CommandParameter="{Binding SelectedElement.GeneralMass.VisibleFrameWidthLeft}"
                                                    FontSize="18"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    Text="▼"
                                                    TextColor="{StaticResource Primary}">
                                                    <Button.Triggers>
                                                        <DataTrigger
                                                            Binding="{Binding SelectedElement.GeneralMass.VisibleFrameWidthLeft.Selected}"
                                                            TargetType="Button"
                                                            Value="True">
                                                            <Setter Property="Text" Value="▲" />
                                                        </DataTrigger>
                                                    </Button.Triggers>
                                                </Button>
                                            </Grid>

                                            <VerticalStackLayout IsVisible="{Binding SelectedElement.GeneralMass.VisibleFrameWidthLeft.Selected}">
                                                <Label>
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding SelectedElement.GeneralMass.VisibleFrameWidthLeft.Titel}" />
                                                            <Span Text=" " />
                                                            <Span FontSize="14" Text="{Binding SelectedElement.GeneralMass.VisibleFrameWidthLeft.OldShortCut, Converter={StaticResource FirstCharConverter}}" />
                                                            <Span FontSize="10" Text="{Binding SelectedElement.GeneralMass.VisibleFrameWidthLeft.OldShortCut, Converter={StaticResource RestOfStringConverter}}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding UpdateImageCommand}" CommandParameter="{Binding SelectedElement.GeneralMass.VisibleFrameWidthLeft}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                <Entry Style="{StaticResource CustomNumberEntryStyle}" Text="{Binding SelectedElement.GeneralMass.VisibleFrameWidthLeft.Value}" />

                                                <Label>
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding SelectedElement.GeneralMass.VisibleFrameWidthRight.Titel}" />
                                                            <Span Text=" " />
                                                            <Span FontSize="14" Text="{Binding SelectedElement.GeneralMass.VisibleFrameWidthRight.OldShortCut, Converter={StaticResource FirstCharConverter}}" />
                                                            <Span FontSize="10" Text="{Binding SelectedElement.GeneralMass.VisibleFrameWidthRight.OldShortCut, Converter={StaticResource RestOfStringConverter}}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding UpdateImageCommand}" CommandParameter="{Binding SelectedElement.GeneralMass.VisibleFrameWidthRight}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                <Entry Style="{StaticResource CustomNumberEntryStyle}" Text="{Binding SelectedElement.GeneralMass.VisibleFrameWidthRight.Value}" />

                                                <Label>
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding SelectedElement.GeneralMass.VisibleFrameWidthTop.Titel}" />
                                                            <Span Text=" " />
                                                            <Span FontSize="14" Text="{Binding SelectedElement.GeneralMass.VisibleFrameWidthTop.OldShortCut, Converter={StaticResource FirstCharConverter}}" />
                                                            <Span FontSize="10" Text="{Binding SelectedElement.GeneralMass.VisibleFrameWidthTop.OldShortCut, Converter={StaticResource RestOfStringConverter}}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding UpdateImageCommand}" CommandParameter="{Binding SelectedElement.GeneralMass.VisibleFrameWidthTop}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                <Entry Style="{StaticResource CustomNumberEntryStyle}" Text="{Binding SelectedElement.GeneralMass.VisibleFrameWidthTop.Value}" />

                                                <Label>
                                                    <Label.FormattedText>
                                                        <FormattedString>
